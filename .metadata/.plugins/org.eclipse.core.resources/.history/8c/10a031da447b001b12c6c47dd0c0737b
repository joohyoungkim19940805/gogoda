package g.g.d.com.emotion.common;
import g.g.d.com.movie.vo.MovieUserGenreVO;

public class MovieGenreUtil {

	public MovieUserGenreVO MovieGenre(String[] genre) {
		MovieUserGenreVO mugvo=new MovieUserGenreVO();
		
		for (int i=0;i<genre.length;i++) {
			if(genre[i].equals("action")){mugvo.setMvaction("액션");}
			if(genre[i].equals("adult")){mugvo.setMvadult("성인물(에로)");}
			if(genre[i].equals("adventure")){mugvo.setMvadventure("어드벤처");}
			if(genre[i].equals("animation")){mugvo.setMvanimation("애니메이션");}
			if(genre[i].equals("comedy")){mugvo.setMvcomedy("코미디");}
			if(genre[i].equals("crime")){mugvo.setMvcrime("범죄");}
			if(genre[i].equals("documentary")){mugvo.setMvdocumentary("다큐멘터리");}
			if(genre[i].equals("drama")){mugvo.setMvdrama("드라마");}
			if(genre[i].equals("family")){mugvo.setMvfamily("가족");}
			if(genre[i].equals("fantasy")){mugvo.setMvfantasy("판타지");}
			if(genre[i].equals("historical")){mugvo.setMvhistorical("사극");}
			if(genre[i].equals("horror")){mugvo.setMvhorror("공포(호러)");}
			if(genre[i].equals("musical")){mugvo.setMvmusical("뮤지컬");}
			if(genre[i].equals("mystery")){mugvo.setMvmystery("미스터리");}
			if(genre[i].equals("opera")){mugvo.setMvopera("공연");}
			if(genre[i].equals("romance")){mugvo.setMvromance("멜로/로맨스");}
			if(genre[i].equals("SF")){mugvo.setMvsf("SF");}
			if(genre[i].equals("thriller")){mugvo.setMvthriller("스릴러");}
			if(genre[i].equals("war")){mugvo.setMvwar("전쟁");}
			if(genre[i].equals("western")){mugvo.setMvwestern("서부극(웨스턴)");}
		}
		if(mugvo.getMvaction()==null&&mugvo.getMvaction().length()<=0){mugvo.setMvaction("0");}
		if(mugvo.getMvadult()==null&&mugvo.getMvadult().length()<=0){mugvo.setMvadult("0");}
		if(mugvo.getMvadventure()==null&&mugvo.getMvadventure().length()<=0){mugvo.setMvadventure("0");}
		if(mugvo.getMvanimation()==null&&mugvo.getMvanimation().length()<=0){mugvo.setMvanimation("0");}
		if(mugvo.getMvcomedy()==null&&mugvo.getMvcomedy().length()<=0){mugvo.setMvcomedy("0");}
		if(mugvo.getMvcrime()==null&&mugvo.getMvcrime().length()<=0){mugvo.setMvcrime("0");}
		if(mugvo.getMvdocumentary()==null&&mugvo.getMvdocumentary().length()<=0){mugvo.setMvdocumentary("0");}
		if(mugvo.getMvdrama()==null&&mugvo.getMvdrama().length()<=0){mugvo.setMvdrama("0");}
		if(mugvo.getMvfamily()==null&&mugvo.getMvfamily().length()<=0){mugvo.setMvfamily("0");}
		if(mugvo.getMvfantasy()==null&&mugvo.getMvfantasy().length()<=0){mugvo.setMvfantasy("0");}
		if(mugvo.getMvhistorical()==null&&mugvo.getMvhistorical().length()<=0){mugvo.setMvhistorical("0");}
		if(mugvo.getMvhorror()==null&&mugvo.getMvhorror().length()<=0){mugvo.setMvhorror("0");}
		if(mugvo.getMvmusical()==null&&mugvo.getMvmusical().length()<=0){mugvo.setMvmusical("0");}
		if(mugvo.getMvmystery()==null&&mugvo.getMvmystery().length()<=0){mugvo.setMvmystery("0");}
		if(mugvo.getMvopera()==null&&mugvo.getMvopera().length()<=0){mugvo.setMvopera("0");}
		if(mugvo.getMvromance()==null&&mugvo.getMvromance().length()<=0){mugvo.setMvromance("0");}
		if(mugvo.getMvsf()==null&&mugvo.getMvsf().length()<=0){mugvo.setMvsf("0");}
		if(mugvo.getMvthriller()==null&&mugvo.getMvthriller().length()<=0){mugvo.setMvthriller("0");}
		if(mugvo.getMvwar()==null&&mugvo.getMvwar().length()<=0){mugvo.setMvwar("0");}
		if(mugvo.getMvwestern()==null&&mugvo.getMvwestern().length()<=0){mugvo.setMvwestern("0");}

		return null;
	}
}
