	// 회원가입 버튼
	@RequestMapping(path="member", method=RequestMethod.GET)
	public void member(Model model) {
		model.addAttribute("member");
	}
	
	// 검색(GO) 버튼
	@RequestMapping(path="search", method=RequestMethod.GET)
	public void search(Model model) {
